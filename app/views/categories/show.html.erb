<div class="container">
  <h3><%= @category.name %></h3>

  <% if @category.articles.count == 0 %>
    <p>Il n'y a pas encore d'articles dans cette catégorie.</p>
  <% end %>

  <% @articles.each do |article| %>

    <div class="article-index">
      <div class="article-title">
        <h3><%= article.title %></h3>
      </div>

      <div class="article-extract">
        <div class="extract-text">
          <p><%= article.content.body.to_plain_text.split(" ")[0..50].join(" ")... %></p>
        </div>
        <div class="extract-link">
          <p><%= link_to "Lire la suite", category_article_path(@category, article) %></p>
        </div>
      </div>

      <div class="article-info-extract">
        <p><%= link_to article.category.name, category_path(article.category) %></p>
        <p><%= article.created_at.day %>/<%= article.created_at.month %>/<%= article.created_at.year %></p>
      </div>
    </div>
  <% end %>
  <button class="btn btn-back-white"><%= link_to "Retour à l'accueil", root_path %></button>
</div>
