      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.label "Envoyez-moi un mail pour crÃ©er un nouveau mot de passe" %>
        <%= f.submit "Envoyer", class: "btn btn-devise" %>
