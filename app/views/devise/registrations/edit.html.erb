<div class="container">
  <h3>Modifier mon compte</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field registration-field">
      <%= f.label :username, "Votre nom" %><br />
      <%= f.email_field :username, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field registration-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field registration-field">
      <%= f.label :password %> <i>(uniquement si vous souhaitez le modifier)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caractères minimum</em>
      <% end %>
    </div>

    <div class="field registration-field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field registration-field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions registration-action">
      <%= f.submit "Modifier" %>
    </div>
  <% end %>

  <div class="delete-account"
    <h3>Supprimer mon compte</h3>
    <%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Êtes vous sûr(e)?" }, method: :delete %>
  </div>

  <%= link_to "Se déconnecter", destroy_user_session_path, method: "delete" %>
  <%= link_to "Retour à l'accueil", root_path %>

</div>
